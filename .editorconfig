root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
tab_width = 4
indent_size = 4
trim_trailing_whitespace = true

[*.{js, jsx, json}]
indent_size = 2

[*.{ts, tsx}]
indent_size = 2

[*.{css, scss}]
indent_size = 2

[*.eslintrc]
indent_size = 2

[*.babelrc]
indent_size = 2

[*.html]
indent_size = 2
